---
import PostNavCard from './PostNavCard.astro'

interface Props {
  prevPost: any
  nextPost: any
}

const { prevPost, nextPost } = Astro.props
---

<nav class="mt-12 flex justify-between gap-4 border-t pt-8">
  <PostNavCard post={prevPost} direction="prev" />
  <PostNavCard post={nextPost} direction="next" />
</nav>
