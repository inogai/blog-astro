---
import { getImage, Image } from 'astro:assets'
import myBackground from '@/assets/scene.jpg'
import GithubIcon from '@/components/icons/Github.astro'
import { t } from '@/i18n/ui'

const optimizedBackground = await getImage({
  src: myBackground,
  format: 'webp',
})
---

<main
  class={`
    grid flex-1 grid-cols-1 bg-cover bg-center
    md:grid-cols-2
  `}
  style={{
    backgroundImage: `url(${optimizedBackground.src})`,
  }}
>
  <div
    class={`
      flex items-center justify-center p-3
      md:p-8
    `}
  >
    <Image
      src="https://avatars.githubusercontent.com/u/29174058?v=4"
      width={512}
      height={512}
      alt="Alex Chen"
      class="max-w-[50vmin] rounded-full"
      layout="constrained"
    />
  </div>
  <div
    class={`
      flex items-center justify-center bg-black/50 p-3 text-white/90
      backdrop-blur-sm
      md:p-8
    `}
  >
    <div
      class={`
        max-w-md text-center
        md:text-left
      `}
    >
      <h1 class="font-mono text-6xl leading-relaxed font-bold">
        {t('home.subtitle')}
      </h1>
      <h2 class="text-2xl leading-loose font-bold">
        {t('home.title')}
      </h2>
      <p class="leading-relaxed text-white/70">
        {t('home.description')}
      </p>
      <p class="mt-2">
        <a
          class="hover:opacity-50"
          href="https://github.com/inogai"
          target="_blank"
          rel="noreferrer noopener"
        >
          <GithubIcon />
        </a>
      </p>
    </div>
  </div>
</main>
