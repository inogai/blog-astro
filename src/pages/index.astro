---
import { getImage, Image } from 'astro:assets'
import myBackground from '@/assets/scene.jpg'

import GithubIcon from '@/components/icons/Github.astro'

import MainLayout from '@/layouts/main.astro'

const optimizedBackground = await getImage({
  src: myBackground,
  format: 'avif',
})
---

<MainLayout content={{ title: 'I am Alex Chen and I do code' }}>
  <div
    class="grid h-screen grid-cols-2 bg-cover bg-center"
    style={{
      backgroundImage: `url(${optimizedBackground.src})`,
    }}
  >
    <div class="flex items-center justify-center">
      <Image
        src="https://avatars.githubusercontent.com/u/29174058?v=4"
        width={384}
        height={384}
        alt="Alex Chen"
        class="rounded-full"
      />
    </div>
    <div
      class={`
        flex items-center bg-black/50 p-8 text-background backdrop-blur-sm
      `}
    >
      <div class="text-left">
        <h1 class="font-mono text-8xl font-bold">inogai</h1>
        <h2 class="mt-4 text-2xl font-bold">I am Alex Chen and I do code.</h2>
        <p class="mt-2 max-w-md text-muted">
          Computer Engineering Student at HKUST. Frontend, Scripting and AI
          Agents. Dotfiles ricing.
        </p>

        <div class="flex basis-0 pt-4">
          <a
            class="hover:opacity-50"
            href="https://github.com/inogai"
            target="_blank"
            rel="noreferrer noopener"
          >
            <span class="sr-only">View my GitHub profile</span>
            <GithubIcon />
          </a>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
